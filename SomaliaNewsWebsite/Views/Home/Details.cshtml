@model SomaliaNewsWebsite.Models.News

@{
    ViewBag.Title = "Details";
}




<div class="panel panel-default">
    <div class="panel-heading">News Details</div>
    <div class="panel-body">

        <div>
            <h4>News</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NewsContext)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewsContext)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NewsDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewsDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Image)
                </dt>

                <dd>
                    @if (Model.Image != null)
                    {
                        <img class="img img-thumbnail" style="max-height: 500px; min-height:40px; min-width: 600px; max-width: 800px;" src="data:image;base64, @Convert.ToBase64String(Model.Image)" />
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Side)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Side)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NewsReporter)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NewsReporter)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>


    </div>
</div>